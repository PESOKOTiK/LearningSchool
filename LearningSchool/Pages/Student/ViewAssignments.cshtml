@page
@model LearningSchool.Pages.Student.ViewAssignmentsModel
@{
    ViewData["Title"] = "Assignments";
}

<h2>Assignments for @Model.LessonTitle</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Assignments)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.Description</td>
                <td>@a.DueDate.ToString("g")</td>
                <td>
                    <a asp-page="/Student/SubmitAssignment"
                       asp-route-AssignmentID="@a.ID"
                       class="btn btn-sm btn-primary">
                        Submit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Assignments.Any())
{
    <p>No assignments available for this lesson.</p>
}
