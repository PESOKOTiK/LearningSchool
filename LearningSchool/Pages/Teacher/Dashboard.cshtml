@page
@model LearningSchool.Pages.Teacher.DashboardModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<h2>Your Courses</h2>
<table class="table">
    <thead>
        <tr><th>Course</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Courses)
        {
            <tr>
                <td>@c.Title</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Teacher/EnrollStudent?courseId=@c.ID">Enroll Students</a>
                    <a class="btn btn-sm btn-secondary" href="/Teacher/CreateAssignment?courseId=@c.ID">Create Assignment</a>
                    <a class="btn btn-sm btn-info" href="/Teacher/ViewSubmissions?courseId=@c.ID">View Submissions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
