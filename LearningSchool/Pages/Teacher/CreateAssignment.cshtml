@page
@model LearningSchool.Pages.Teacher.CreateAssignmentModel
@{
    ViewData["Title"] = "Create Assignment";
}

<h2>Create Assignment</h2>
<form method="post" class="w-50">
    <input type="hidden" asp-for="CourseID" />
    <div class="mb-3">
        <label asp-for="LessonID" class="form-label">Lesson</label>
        <select asp-for="LessonID" class="form-select" required>
            <option value="">-- choose lesson --</option>
            @foreach (var l in Model.LessonOptions)
            {
                <option value="@l.ID">@l.Title</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date</label>
        <input asp-for="DueDate" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}
