<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Learning School</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">LearningSchool</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                @if (Context.Session.GetString("UserRole") == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Admin Panel</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ManageCategories">Manage Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ManageCourses">Manage Courses</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ManageModules">Manage Modules</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ManageLessons">Manage Lessons</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ManageTeachers">Manage Teachers</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/ViewFeedback">All Feedback</a></li>
                }
                @if (Context.Session.GetString("UserRole") == "Teacher")
                {
                    <li class="nav-item"><a class="nav-link" href="/Teacher/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Teacher/ViewFeedback">View Feedback</a></li>
                }
                @if (Context.Session.GetString("UserRole") == "Student")
                {
                    <li class="nav-item"><a class="nav-link" href="/Student/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Student/Feedback">Feedback</a></li>
                }
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (Context.Session.GetInt32("UserID") != null)
                {
                    <li class="nav-item"><span class="navbar-text text-light me-3">Role: @Context.Session.GetString("UserRole")</span></li>
                    <li class="nav-item"><a class="nav-link" href="/Logout">Logout</a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="/Login">Login</a></li>
                }
            </ul>
        </div>
    </nav>
    <main class="container mt-4">
        @RenderBody()
    </main>
</body>
</html>
